# frozen_string_literal: true

source "https://rubygems.org"

git_source(:github) {|repo_name| "https://github.com/#{repo_name}" }

# gem "rails"

gem 'sinatra' # require sinatra gem
gem 'activerecord', ">= 4.2.7.1", :require => 'active_record' # require activerecord gem and require the active_record library from that gem 
gem 'sinatra-activerecord', :require => 'sinatra/activerecord' # requiring gem to have sinatra and active record work together
gem 'rake' # requiring gem for rake tasks for database creation and management 
gem 'require_all' # gem for requiring all files without having to write lines of code to require different files to each other 
gem 'sqlite3', '~>1.4' # gem for creating and hosting relational database
gem 'shotgun' # gem for hosting web app; allows changes to code to be updated without having to restart server
gem 'pry' # gem for debugging
gem 'bcrypt' # gem for password hashing 
gem 'tux' # a shell to run sinatra commands and see the objects responses to code